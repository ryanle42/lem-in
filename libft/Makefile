CC = @gcc -Wall -Werror -Wextra -I ./includes

all: $(NAME)

$(NAME): $(OBJ)
	@ar rc $(NAME) $(OBJ)
	@echo "\x1B[33mLibrary made"

clean:
	@rm -f $(OBJ)

fclean: clean
	@rm -f $(NAME)

re: fclean all

bin: re
	@make clean
